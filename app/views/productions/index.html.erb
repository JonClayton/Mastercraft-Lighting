<table class="table">
  <% @productions.each do |production| %>
  <tr id="prod<%= production.id %>">
    <td><%= production.name %></a> </td>
    <td><%= button_to "View", production_path(production), :method => :get %></td>
    <td><%= button_to "Remove Production", production, :method => :delete %></td>
    <td><%= form_tag(uploads_create_path(id: production.id), multipart: true) do %>
      <%= file_field_tag 'vectorworks_file', :accept => '*.tsv' %>
      <%= submit_tag "Upload file from Vectorworks", data: { disable_with: "Please wait, this may take a few seconds" } %>
    <% end %></td>
    <% if production.equipments.count>0 %>
    <td><%= button_to "Download Production into .tsv format", uploads_download_path(id: production.id) %></td>
    <% end %>
    </tr>
  <% end %>
</table>

<% if flash.alert %>
<div class="error">
<%= flash.alert %>
</div>
<% end %>

