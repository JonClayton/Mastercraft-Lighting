    <%= text_field_tag :dimmer, size: 5 %>
    <%= text_field_tag :position, :size=>"5" %>
    <%= text_field_tag :unit_number, :size=>"5" %>
    <%= text_field_tag :instrument_type, :size=>"#{:instrument_type.length}" %>
